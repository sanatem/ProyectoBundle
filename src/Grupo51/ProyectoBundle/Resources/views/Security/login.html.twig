{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block title%}
Welcome
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{asset('bootstrap/css/bootstrap.css')}}">
{% endblock %}


{% block fos_user_content %}
  
    {% block login %}

    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
        <script type="text/javascript">
            location.href="{{ path('grupo51_proyecto_home') }}";
        </script>

    {% endif %}
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          
          <a class="navbar-brand" href="#">Proyecto de Software</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
          <ul class="nav navbar-nav navbar-right">
            <form class="navbar-form navbar-left"  action="{{ path("fos_user_security_check") }}"  method="POST">
                <div class="form-group">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username"  class="form-control" placeholder="Usuario" name="_username" value="{{ last_username }}" required="required" />

                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="required" />

                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                    <input type="submit"  id="_submit" class="btn btn-default" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    <input type="hidden" name="_target_path" value="{{'grupo51_proyecto_home'}}" />
                </div>
            </form>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    {% if error %}
        <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    {% endblock %}
    

    {% block register %}
      <div class="row">
            <div class="col-md-4">
                            <h3><span class="label label-info">Â¿No tienes cuenta? Registrate!</span></h3> 

                    <label>{% render url('fos_user_registration_register') %}</label>

            </div>
            <div class="col-md-8">

            </div>

        </div>
        
    {% endblock %} 

{% endblock fos_user_content %}
